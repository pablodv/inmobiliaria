<div class="block" id="block-login">
  <h2>Login</h2>
  <div class="content login">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form login"}) do |f| %>
      <div class="group wat-cf">
        <div class="left"><%= f.label :email, :class => "label right" %></div>
        <div class="right"><%= f.text_field :email, :class => "text_field" %></div>
      </div>
      <div class="group wat-cf">
        <div class="left"><%= f.label :password, :class => "label right" %></div>
        <div class="right"><%= f.password_field :password, :class => "text_field" %></div>
      </div>
      <div class="group navform wat-cf">
        <% if devise_mapping.rememberable? -%>
          <div class="right">  
            <%= f.check_box :remember_me, :class => "checkbox-size", :id => "login-check" %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
        <div class="right">
          <button class="button" type="submit">
            <img src="../images/web-app-theme/icons/key.png" alt="Save"> Login
          </button>
        </div>      
      </div>      
    <% end %>
  </div>
</div>
