<div class="secondary-navigation">
  <ul class="wat-cf">
    <li class="first <%= klass == 'list' ? 'active' : '' %>">
    	<%= link_to "List", properties_path  %>
  	</li>
    <li class="<%= klass == 'new' ? 'active' : '' %>">
    	<%= link_to "New", new_property_path %>
  	</li>
  	<% if klass == 'edit' %>
	    <li class="active">
	    	<%= link_to "Edit", edit_property_path(property) %>
	  	</li>
  	<% end %>
  	<% if klass == 'show' %>
	  	<li class="active">
	  		<%= link_to "Show", property_path(property) %>
	  	</li>
  	<% end %>
  </ul>
</div>