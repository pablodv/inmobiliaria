<div class="block">
  <%= render :partial => 'secondary_navigation', :locals => { :klass => 'show', :tenant => @tenant } %>
  <div class="content">
    <div class="inner">
      
        <p><b>First name</b>  <%= @tenant.first_name %></p>
        <p><b>Second name</b> <%= @tenant.second_name %></p>
        <p><b>Dni</b>         <%= @tenant.dni %></p>
        <p><b>Address</b>     <%= @tenant.address %></p>
        <p><b>Phone</b>       <%= @tenant.phone %></p>
        <p><b>Email</b>       <%= @tenant.email %></p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png") + "Edit", edit_tenant_path(@tenant), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png") + "Delete", tenant_path(@tenant), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>