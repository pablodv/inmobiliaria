<div class="block">
  <%= render :partial => 'secondary_navigation', :locals => { :klass => 'show', :owner => @owner } %>
  <div class="content">
    <div class="inner">
      
        <p><b>First name</b>  <%= @owner.first_name %></p>
        <p><b>Second name</b> <%= @owner.second_name %></p>
        <p><b>Dni</b>         <%= @owner.dni %></p>
        <p><b>Address</b>     <%= @owner.address %></p>
        <p><b>Phone</b>       <%= @owner.phone %></p>
        <p><b>Email</b>       <%= @owner.email %></p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png") + "Edit", edit_owner_path(@owner), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png") + "Delete", owner_path(@owner), :method => "delete", :class => "button", :confirm => "Are you sure?" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'shared/sidebar') -%>